<table id="example2" class="table table-bordered table-hover table-striped" style="width: 100%">
  <thead>
    <tr>
      <th style="width: 7%">No</th>
      <th>Jenis Pembayaran</th>
      <th>Jenis Bank</th>
      <th style="width: 15%">Status</th>
      <th style="width: 19%">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < payment.length; i++){ %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= payment[i].type %></td>
      <td>
        <% payment[i].banks.forEach(bank => { %>
        <span class="badge badge-warning"> <%= bank.name %>-<%= bank.bankName %>-<%= bank.noRekening %> </span>
        <% }); %>
      </td>

      <!-- status -->
      <td style="text-align: center">
        <input type="checkbox" name="my-checkbox" checked data-bootstrap-switch data-on-color="success" data-off-color="danger" />
      </td>
      <!-- button -->
      <td style="text-align: center">
        <form action="/payment/delete/<%= payment[i]._id %>?_method=DELETE" method="POST" style="display: inline-block">
          <a href="/payment/edit/<%= payment[i]._id %>" class="btn btn-warning">
            <i class="fas fa-pencil-alt"></i>
            Edit
          </a>
          <button href="" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i>
            Delete
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
