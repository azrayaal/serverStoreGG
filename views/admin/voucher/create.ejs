<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs %> <%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Voucher</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/voucher">Voucher</a></li>
            <li class="breadcrumb-item active">Create</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <!-- /.card-header -->
            <div class="card-body">
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form tambah voucher</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/voucher/create" method="POST" enctype="multipart/form-data">
                  <div class="card-body">
                    <!-- nama -->
                    <div class="form-group">
                      <label for="name">Nama Game</label>
                      <input type="text" name="name" class="form-control" id="name" placeholder="Masukan nama voucher" required />
                    </div>

                    <!-- category -->
                    <div class="form-group">
                      <label>Category</label>
                      <select class="form-control" style="width: 100%" name="category" required>
                        <option selected="selected">Pilih category</option>
                        <% category.forEach(category => { %>
                        <option value="<%= category._id  %>"><%= category.name %></option>
                        <% }); %>
                      </select>
                    </div>

                    <!-- Nominal -->
                    <div class="form-group">
                      <label>Nominal </label>
                      <div class="select2-purple">
                        <select class="form-control select2" multiple="multiple" data-placeholder="Pilih nominal" style="width: 100%" name="nominals" required>
                          <% nominal.forEach(nominal => { %>
                          <option value="<%= nominal._id  %>"><%= nominal.coinName %> <%= nominal.price %></option>
                          <% }); %>
                        </select>
                      </div>
                    </div>

                    <!-- input gambar -->
                    <div class="form-group">
                      <label for="image">Image</label>
                      <input type="file" name="image" class="form-control" id="image" placeholder="Masukan nama voucher" required />
                      <br />
                      <img src="" id="perview" />
                    </div>
                    <!-- /.form-group -->
                  </div>

                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Simpan</button>
                    <button type="submit" class="btn btn-secondary">
                      <a href="/voucher" style="color: white"><i class="fa fa-undo"></i> Cancel</a>
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!-- /.card -->
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
<script>
  function readUrl(input) {
    if (input.files && input.files[0]) {
      const reader = new FileReader();

      reader.onload = function (e) {
        $('#perview').attr('src', e.target.result);
        $('#perview').attr('width', '20%');
        $('#perview').attr('height', '20%');
      };

      reader.readAsDataURL(input.files[0]);
    }
  }

  $('#image').change(function () {
    readUrl(this);
  });
</script>
