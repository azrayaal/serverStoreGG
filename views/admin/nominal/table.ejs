<table id="example2" class="table table-bordered table-hover table-striped" style="width: 100%">
  <thead>
    <tr>
      <th style="width: 7%">No</th>
      <th>Nama Coin</th>
      <th>Jumlah Coin</th>
      <th>Harga Coin</th>
      <th style="width: 20%">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < nominal.length; i++){ %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= nominal[i].coinName %></td>

      <td>
        <% if(nominal[i].coinName === 'Silver') {%>
        <span class="badge badge-secondary"> <%= nominal[i].coinQuantity %> </span>
        <% } else if(nominal[i].coinName === 'GOLD') { %>
        <span class="badge badge-warning"> <%= nominal[i].coinQuantity %> </span>
        <% } else if(nominal[i].coinName === 'Jewel') {%>
        <span class="badge badge-primary"> <%= nominal[i].coinQuantity %> </span>
        <% } else {%>
        <span class="badge badge-success"> <%= nominal[i].coinQuantity %> </span>
        <% } %>
      </td>

      <td><%= nominal[i].price %></td>
      <td>
        <form action="/nominal/delete/<%= nominal[i]._id %>?_method=DELETE" method="POST">
          <a href="/nominal/edit/<%= nominal[i]._id %>" class="btn btn-warning">
            <i class="fas fa-pencil-alt"></i>
            Edit
          </a>
          <button href="" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i>
            Delete
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
