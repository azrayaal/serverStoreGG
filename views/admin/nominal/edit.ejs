<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>nominal</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
              <li class="breadcrumb-item active">Edit</li>
            
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
       
              <!-- /.card-header -->
              <div class="card-body">
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Form edit nominal "<%= nominal.coinName  %>"</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form action="/nominal/edit/<%= nominal._id %>?_method=PUT" method="POST">
                <div class="card-body">
                  <div class="form-group">
                  <label>Nama coin </label>
                  <select class="form-control select2 select2-danger" data-dropdown-css-class="select2-danger" style="width: 100%;" name="coinName" required>
                    <option selected="selected">Pilih coin</option>
                    <option value="Silver"
                    <% if(nominal.coinName === "Silver") { %>
                      selected
                    <% }  %> 
                    >Silver</option>
                    <option value="GOLD"
                    <% if(nominal.coinName === "GOLD") { %>
                      selected
                    <% }  %>
                    >GOLD</option>
                    <option value="Jewel"
                    <% if(nominal.coinName === "Jewel") { %>
                      selected
                    <% }  %> 
                    >Jewel</option>
                    <option value="Diamond"
                    <% if(nominal.coinName === "Diamond") { %>
                      selected
                    <% }  %> 
                    >Diamond</option>
                  </select>
                </div>
                  <div class="form-group">
                    <label for="coinQuantity">jumlah nominal</label>
                    <input value="<%= nominal.coinQuantity %>" type="number" name="coinQuantity" class="form-control" id="coinQuantity" placeholder="Masukan jumlah nominal" required>
                  </div>
                  <div class="form-group">
                    <label for="price">Masukan harga</label>
                    <input value="<%= nominal.price %>" type="number" name="price" class="form-control" id="price" placeholder="Masukan harga" required>
                  </div>
                </div>

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Simpan</button>
                    <button type="submit" class="btn btn-secondary"><a href="/nominal" style="color: white" ><i class="fa fa-undo"></i> Cancel</a></button>
                </div>
              </form>
            </div>
        </div>
            </div>
            <!-- /.card -->
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

  
<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>